{
  "title": "Invoice Builder API Documentation",
  "description": "Swagger API Documentation for User",
  "license": {
    "name": "MIT",
    "url": "https://opensource.org/licenses/MIT"
  },
  "swagger": "2.0",
  "version": "1.0.0",
  "host": "localhost:4000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for Users"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/user/signup": {
      "post": {
        "tags": ["User"],
        "summary": "Create new User",
        "description": "Create new Invoice in the System",
        "parameters": [
          {
            "name": "user",
            "description": "User that we want to sign up",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#definitions/User"
            }
          },
          {
            "name": "authorization",
            "description": "Access token to authorize the user",
            "in": "header",
            "type": "string",
            "required": true
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "new User is created",
            "schema": {
              "$ref": "#definitions/User"
            }
          }
        }
      }
    },
    "/token/GetToken": {
      "post": {
        "tags": ["Token"],
        "summary": "Generate and Refresh Token",
        "description": "Generate Token",
        "parameters": [
          {
            "name": "token",
            "description": "Token Generator",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#definitions/Token"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "new Token is created",
            "schema": {
              "$ref": "#definitions/Token"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "required": [
        "fullname",
        "username",
        "password",
        "phone",
        "email",
        "address"
      ],
      "properties": {
        "fullname": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "address": {
          "type": "string"
        }
      }
    },
    "Token": {
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    }
  }
}
